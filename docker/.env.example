# Claude Flow Dagger Environment Configuration

# Required: Claude API Key
CLAUDE_API_KEY=your-claude-api-key

# Claude Flow Configuration
CLAUDE_FLOW_VERSION=2.0.0-alpha.101
CLAUDE_FLOW_ENVIRONMENT=development
CLAUDE_FLOW_TIMEOUT=30000
CLAUDE_FLOW_RETRIES=3
CLAUDE_FLOW_NON_INTERACTIVE=true

# Docker Configuration
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=claudeflow
DOCKER_TAG=latest

# Memory Provider Configuration
MEMORY_PROVIDER=redis
MEMORY_CONNECTION_URL=redis://redis:6379
MEMORY_TTL=3600
MEMORY_MAX_SIZE=100MB
MEMORY_COMPRESSION=false
MEMORY_ENCRYPTION=false

# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/claude_flow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=claude_flow

# GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_OWNER=your-github-org
GITHUB_REPO=your-repo-name
GITHUB_BRANCH=main
GITHUB_AUTO_MERGE=false
GITHUB_REQUIRE_REVIEWS=1

# HashiCorp Vault
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=root

# Feature Flags
FEATURES_SPARC=true
FEATURES_SWARM=true
FEATURES_NEURAL=true
FEATURES_MEMORY=true
FEATURES_GITHUB=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=console

# Cloud Provider Credentials (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcp-credentials.json
GCP_PROJECT_ID=

AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Performance Settings
MAX_WORKERS=10
WORKER_TIMEOUT=120000
BATCH_SIZE=5
PARALLEL_EXECUTION=true

# Security
ENABLE_SECURITY_SCAN=true
ENABLE_VULNERABILITY_CHECK=true
ENABLE_SECRET_DETECTION=true